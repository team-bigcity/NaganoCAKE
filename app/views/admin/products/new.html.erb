<div class="body"> 
    <div class="container">
    <br></br>
    <h1>商品新規登録</h1>
    <br></br>
        <div class="row">
            <div class="col-xs-12">
                <%= form_with model: @product, url: admin_products_path, local:true do |f| %>
                <%= render "layouts/errors", obj: @product %>
                <div class="col-xs-4"></div>
                <div class="col-xs-8">
                    <%= render "form", f: f %>
                    <div class="form-group">
                        <%= f.attachment_field :image %>
                    </div>
                    <br></br>
                    <div>
                  	    <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>