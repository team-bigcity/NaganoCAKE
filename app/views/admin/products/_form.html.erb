<div class="form-group">
    <%= f.label :"商品名", class: "col-xs-3" %>
    <%= f.text_field :name %>
</div>
<div class="form-group">
    <%= f.label :"商品説明", class: "col-xs-3" %>
    <%= f.text_area :introduction %>
</div>
<div class="form-group">
    <%= f.label :"ジャンル", class: "col-xs-3" %>
    <%= f.collection_select :genre_id, @genre, :id, :name, :prompt => "--選択してください--" %>
</div>
<div class="form-group">
    <%= f.label :"税抜価格", class: "col-xs-3" %>
    <%= f.text_field :non_taxed_price %>円
</div>
<div class="form-group">
    <%= f.label :"販売ステータス", class: "col-xs-3" %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "販売中", {value: :true} %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "販売停止", {value: :false} %>
</div>