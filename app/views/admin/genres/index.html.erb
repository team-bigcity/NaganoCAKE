<div class="body">
    <div class="container">
    <h1>ジャンル一覧・追加</h1>
    <br></br>
        <div class="row">
            <div class="col-xs-6">
                <%= form_for @genre, :url => {:action => :create} do |f| %>
                <%= render "layouts/errors", obj: @genre %>
                <div>
                    <i></i>ジャンル
                    <%= f.text_field :name %>
                    <%= f.radio_button :is_active, true %>
                    <%= f.label :is_active, "有効", {value: :true} %>
                    <%= f.radio_button :is_active, false %>
                    <%= f.label :is_active, "無効", {value: :false} %>
                    <%= f.submit "追加", class: "btn btn-info" %>
                </div>
                <% end %>
                <br></br>
                <table class="table table-hover table-bordered">
                    <thead bgcolor='#dcdcdc'>
                        <tr>
                            <th>ジャンル</th>
                            <th>状態</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @genres.each do |genre| %>
                        <tr>
                            <td><%= genre.name %></td>
                            <% if genre.is_active == true %>
                                <td>有効</td>
                            <% elsif genre.is_active == false %>
                                <td>無効</td>
                            <% end %>
                            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
