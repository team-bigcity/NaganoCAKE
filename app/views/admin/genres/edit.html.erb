<div class="body">
    <div class="container">
    <h1></h1>
    <br></br>
        <div class="row">
            <div class="col-xs-6">
                <%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
                <div>
                    <i></i>ジャンル
                    <%= f.text_field :name %>
                    <%= f.radio_button :is_active, true %>
                    <%= f.label :is_active, "有効", {value: :true} %>
                    <%= f.radio_button :is_active, false %>
                    <%= f.label :is_active, "無効", {value: :false} %>
                    <%= f.submit "変更を保存する", class: "btn btn-info" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>