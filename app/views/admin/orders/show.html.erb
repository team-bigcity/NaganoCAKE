<div class="container">
  <div class="row">
    <div class="col-lg-12 center-block" style="margin: 20px 0 50px 0">
      <h3>注文履歴詳細</h3>
    </div>
    <div class="col-lg-12 center-block">
      <table class='table table-noborder'>
        <thead>
          <tr>
            <th>購入者</th>
            <td><%= link_to admin_customer_path(customer) do %><%= @order.customers.last_name %><%= @order.customers.first_name %><% end %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.customers.postcode %><%= @order.customers.address %></td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
              <%= form_with url: admin_order_path, local: true do |f| %>
                <%= f.select :status, {"入金待ち": '0', "入金確認": '1', "製作中": '2', "発送準備": '3', "発送済み": '4'} %>
                <%= f.submit "更新", class: 'btn btn-primary col-xs-3' %>
              <% end %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row center-block">
    <div class="col-lg-9">
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
