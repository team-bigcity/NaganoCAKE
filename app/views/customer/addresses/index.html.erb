<div class="body">
  <div class="container">
    <h4 style="margin: 50px 0 20px 100px">配送先登録/一覧</h4>
      <div class="form-horizontal">
        <div class="col-xs-10">
          <%= form_with model: @address, url: addresses_path(@address), local: true do |f| %>
            
            <div class="form-group">
              <label class="col-sm-3 control-label" for="InputEmail">郵便番号（ハイフンなし）</label>
                <div class="col-xs-3">
                  <%= f.text_field :postcode, autofocus: true, class: 'form-control' %><br/>
                </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-3 control-label" for="InputEmail">住所</label>
                <div class="col-xs-6">
                  <%= f.text_field :address, autofocus: true, class: 'form-control' %><br/>
                </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-3 control-label" for="InputEmail">宛名</label>
                <div class="col-xs-3">
                  <%= f.text_field :name, autofocus: true, class: 'form-control' %><br/>
                </div>
            </div>
            <div class="col-lg-12 right-block"  style="margin: 0 0 20px 800px">
              <%= f.submit '登録する', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-10">
          <table class="table table-hover ttable-inverse">
            <thead>
                <tr>
                  <th class="col-xs-1">郵便番号</th>
                  <th class="col-xs-7">住所</th>
                  <th class="col-xs-1">宛名</th>
                  <th class="col-xs-3"></th>
                  <!--<th colspan="4"></th>-->
                </tr>
            </thead>
            
            <tbody>
              <% @addresses.each do |address| %>
                <tr>
                  <td class="col-xs-1"><%= address.postcode %></td>
                  <td class="col-xs-7"><%= address.address %></td>
                  <td class="col-xs-1"><%= address.name %></td>
                  <td class="col-xs-3">
                    <%= link_to '編集する', edit_address_path(address), class: 'btn btn-primary' %>
                    <%= link_to '削除する', address_path(address), method: :delete, class: 'btn btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>