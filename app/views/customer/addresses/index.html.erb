<h4>配送先登録/一覧</h4>

<%= form_with model: @address, url: addresses_path(@address), local: true do |f| %>
  
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true, class: "postcode" %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, class: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>
  
  <%= f.submit '登録する', class: 'btn-success' %>
<% end %>

<table>
  <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
        <!--<th colspan="4"></th>-->
      </tr>
  </thead>
  
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(address), class: 'btn btn-primary' %>
          <%= link_to '削除する', address_path(address), method: :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>