<h4>配送先編集</h4>

<h4>登録情報編集</h4>
<%= form_with model: @address, url: addresss_update_path(current_customer), method: :PATCH, local: true do |f| %>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true, class: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, class: "address" %>
  </div>

  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>

  <%= f.submit '編集する', class: 'btn btn-primary' %>
<% end %>