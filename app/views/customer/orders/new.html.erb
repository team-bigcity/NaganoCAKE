<h1>注文情報入力</h1>
  <form class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <h2>支払方法</h2>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="checkbox1">クレジットカード
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="checkbox2">銀行振込
          </label>
        </div>
      </div>
    </div>

   <% @addresses.each do |address| %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <h2>お届け先</h2>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="checkbox1">ご自身の住所<br>
                    〒<% customers.postcode %><br>
                    <%= customers.address %><br>
                    <%= customers.last_name %><%= customers.first_name %>
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <input type="checkbox" value="checkbox2">登録済み住所から選択
          </div>
          <div class="InputSelect">
            <label>
              <input type="InputSelect" value="InputSelect1">
            </label>
            <div class="col-sm-10">
              <select class="fowm-control" id="InputSelect">
                <option></option>
                <option></option>
                <option></option>
              </select>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <input type="checkbox" value="checkbox3">新しいお届け先
            </label>
          </div>
          <label class="col-sm-offset-2 control-label for="Input>郵便番号（ハイフンなし）</label>
          <div class="col-sm-10">
            <input type="" class="formcontrol" id="postcode" placeholder="郵便番号">
          </div>
          <label class="col-sm-offset-2 control-label for="Input>住所</label>
          <div class="col-sm-10">
            <input type="" class="formcontrol" id="address" placeholder="住所">
          </div>
          <label class="col-sm-offset-2 control-label for="Input>宛名</label>
          <div class="col-sm-10">
            <input type="" class="formcontrol" id="name" placeholder="宛名">
          </div>
        </div>
      </div>
      <% address.submit "確認画面へ進む", class:"btn btn-primary" %>
    <% end %>
  </form>