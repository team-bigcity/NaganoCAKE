<div class="container">
    <div class="row">
      <div class="col-log-8">
        <h2>注文履歴一覧</h2>
          <table class="table">
              <thead class="table-title">
                  <tr>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                  </tr>
              </thead>
              <tbody>
                  <% @orders.each do |order| %>
                  <tr>
                    <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
                    <td>〒<%= order.postcode %><br>
                          <%= order.address %><br>
                          <%= order.name %> 様
                    </td>

                      <td><% order.order_products.each do |order_product| %>
                          <%= order_product.product.name %>
                          <% end %>
                    </td>
                    <td>
                      <% sum = 0 %>
                      <% @order_product.each do |order_product| %>
                      <% sum += order_product.product.non_taxed_price * order_product.amount %>
                      <% end %>
                      <% (sum = (sum * 1.1).floor).to_s(:delimited) %>
                      <%= (sum + order.shipping_cost).to_s(:delimited) %>円
                    </td>
                    <td><%= order.status %></td>
                    <td><%= link_to "表示する", order_path(order), class: "btn btn-primary order_#{order.id}" %></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
