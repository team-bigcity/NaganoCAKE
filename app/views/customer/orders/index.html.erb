<div class="container">
    <div class="row">
      <div class="col-log-8">
        <h2>注文履歴一覧</h2>
          <table class="table">
              <thead class="table-title">
                  <tr>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                  </tr>
              </thead>
              <tbody>
                  <% @orders.each do |order| %>
                  <tr>
                    <td><% order.created_at.strftime(”%Y年%m月%d日”) %></td>
                    <td>〒<% order.postcode %><br>
                          <%= order.address %><br>
                          <%= order.name %>
                    </td>
                    <td><%= product.name %></td>
                    <td><%= total_payment + order.shipping_cost %>円</td>
                    <td><% orders.status %></td>
                    <td><%= link_to "表示する", order_path(order), class: "btn btn-primary order_#{order.id}" %></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
