    <h1>注文情報確認</h1>
      <div class="row">
        <% @order_product.each do |f|%>
          <div class="col-lg-8">
            <table class="table">
              <thead class="table-title">
                <tr>
                  <th>商品名</th>
                  <th>単価</th>
                  <th>数量</th>
                  <th>小計</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <!--<td>%= f.name %></td>-->
                  <td><%= f.taxed_price %></td>
                  <td><%= f.amount %></td>
                  <td><%= f.taxed_price * f.amount %>円</td>
                </tr>
              </tbody>
            </table>
          </div>
        <% end %>
        <% @orders.each do |f| %>
          <div class="col-lg-3">
            <table class="table">
              <tr>
                <th>送料</th>
                <td><%= f.shipping_cost %>円</td>
              </tr>
              <tr>
                <th>商品合計</th>
                <td><%= f.total_payment %>円</td>
              </tr>
              <tr>
                <th>請求金額</th>
                <td><%= f.total_payment + f.shipping_cost %>円</td>
              </tr>
            </table>
          </div>
          <div class="col-lg-8">
            <table>
              <tr>
                <th>支払方法</th>
                <td><%= f.payment_method %></td>
              </tr>
              <tr>
                <th>お届け先</th>
                <td>〒<%= f.postcode %><br>
                          <%= f.address %><br>
                          <%= f.name %> 様</td>
              </tr>
            </table>
             <%= link_to "購入を確定する", orders_complete_path, class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
