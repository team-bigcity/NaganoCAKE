<h4>登録情報編集</h4>
<%= form_with model: @customer, local: true do |f| %>
  
  <div class="field">
    名前
    <%= f.label :（姓）%>
    <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
  </div>
  
  <div class="field">
    フリガナ
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana , autofocus: true, class: "first_name_kana " %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true, class: "postcode" %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, class: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true, class: "phone_number" %>
  </div>
  
  <% end %>
  <%= link_to '編集内容を保存する', customers_path(@customer), method: :patch, class: 'btn btn-primary' %>
  <!--< if customer_signed_in? && @customer.id == current_customer.id %>-->
        <%= link_to '退会する', customers_hide_path(current_customer), method: :put, "data-confirm" => "本当に退会しますか？", class: 'btn btn-danger' %>
  <!--< end %>-->