<div class="container">
  <div class="row">
    <%= flash[:warning] %>
    <div class="col-lg-12 center-block" style="margin: 50px 0 50px 50px">
      <h3 style="margin: 0 0 20px 400px">パスワード変更</h3>
      <div class="form-horizontal">
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        
        <div class="form-group">
          <label class="col-sm-5 control-label" for="InputEmail">メール・アドレス</label><br />
            <div class="col-xs-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
        </div>
        
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        
        <div class="form-group">
          <label class="col-sm-5 control-label" for="InputEmail">新しいパスワード<i>(変更したくない場合は空白のままにします)</i></label><br />
            <div class="col-xs-3">
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> 文字以上</em>
              <% end %>
            </div>
        </div>
          
        <div class="form-group">
          <label class="col-sm-5 control-label" for="InputEmail">パスワード（確認用）</label><br />
            <div class="col-xs-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
        </div>  
        
        <div class="form-group">
          <label class="col-sm-5 control-label" for="InputEmail">現在のパスワード</label><br />
            <div class="col-xs-3">
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>
        </div>  
          
        <div class="action-group">
              <div class="col-lg-12 center-block" style="margin: 20px 20px 80px 480px">
                <%= f.submit "変更する", class: 'btn btn-primary' %>
              </div>
        </div>
      <% end %>
 
      <h3 style="margin: 0 0 20px 450px">会員の退会</h3>
      <h4 style="margin: 0 0 20px 420px">本当によろしいですか?</h4>
      
      <div class="action-group">
              <div class="col-lg-12 center-block" style="margin: 20px 20px 20px 480px">
                <p><%= button_to "退会する", customers_leave_path, method: :patch, "data-confirm" => "本当に退会しますか？", class: 'btn btn-danger' %></p>
              </div>
      </div>
      <h4 class="col-lg-12 center-block" style="margin: 20px 20px 20px 480px"><%= link_to "戻る", customers_my_page_path %></h4>
    </div>
  </div>
</div> 